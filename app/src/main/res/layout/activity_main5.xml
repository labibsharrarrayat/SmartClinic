<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".Main5Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.01"
            android:orientation="horizontal">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.05"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/twitter" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="89dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="21dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.71"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.933"
                    app:srcCompat="@drawable/fb2" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.88"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/ig" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.05"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/group3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.7"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:layout_weight="0.95"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:orientation="vertical"></LinearLayout>
                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:background="@drawable/login_box"
                    android:orientation="vertical">


                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_weight="0.2">

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/lock2" />
                    </android.support.constraint.ConstraintLayout>
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_weight="0.1">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="RESET YOUR PASSWORD?"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textColor="#444242"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_weight="0.7"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:orientation="horizontal"
                            android:layout_weight="0.1"></LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:orientation="vertical"
                            android:layout_weight="0.2">

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:text="We have sent a reset password email to abc@gmail.com"
                                android:layout_weight="0.4"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_gravity="left"
                                android:textColor="#444242"
                                android:layout_marginStart="13dp"
                                android:layout_marginEnd="10dp"
                                android:textSize="10sp"/>

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:text="Please click the reset password link to set your new password"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_gravity="left"
                                android:textColor="#444242"
                                android:layout_marginStart="13dp"
                                android:layout_marginEnd="10dp"
                                android:textSize="10sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:orientation="horizontal"
                            android:layout_weight="0.05"></LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:orientation="horizontal"
                            android:layout_weight="0.05"></LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:orientation="vertical"
                            android:layout_weight="0.2">

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_weight="0.4"
                                android:text="Didn't receive email yet?"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_gravity="left"
                                android:textColor="#444242"
                                android:layout_marginStart="13dp"
                                android:layout_marginEnd="10dp"
                                android:textSize="10sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:orientation="horizontal"
                                android:layout_weight="0.5">

                                <TextView
                                    android:id="@+id/textView22"
                                    android:layout_width="10dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.33"
                                    android:text="Please check your spam folder, or"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_gravity="left"
                                    android:textColor="#444242"
                                    android:layout_marginStart="13dp"

                                    android:textSize="10sp"/>

                                <TextView
                                    android:id="@+id/textView23"
                                    android:layout_width="10dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.07"
                                    android:text="RESEND"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_gravity="left"
                                    android:textColor="#2304FB"
                                    android:textSize="10sp"/>

                                <TextView
                                    android:id="@+id/textView21"
                                    android:layout_width="10dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2"
                                    android:text="the email"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_gravity="left"
                                    android:textColor="#444242"
                                    android:textSize="10sp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:orientation="horizontal"
                            android:layout_weight="0.2"></LinearLayout>


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="0.8"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>